@import "nib"

global-reset()

html
  height 100%

body
  margin 0
  background #fff
  color #2c3e50
  font-family "Open Sans", sans-serif
  height 100%

.wrap
  height 100%

#start
  text-align center
  position absolute
  bottom 0
  width 100%

#sword
  width 2.5%
  height 100%
  background #fff
  margin 0 auto
  box-shadow 0 0 14px 3px #15ffff
  display none

button
  width 50%
  display inline-block
  font-size 1.6em

img
  width 10%
  height auto
  vertical-align bottom
